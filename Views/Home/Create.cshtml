@model MVCAssigment.Services.PersonCreateModel;
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h1 style="text-align: center"> Create new person</h1>
    <div class="row">
        <form asp-controller="Home" asp-action="Create" method="post" class="col-8 offset-2">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter first name">
                <span asp-validation-for="FirstName" class="form-text text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Enter last name">
                <span asp-validation-for="LastName" class="form-text text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <select class="form-control" asp-for="Gender">
                    <option>Male</option>
                    <option>Female</option>
                    <option>Others</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth">Date of birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Enter date of birth">
                <span class="form-text text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone number</label>
                <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Enter phone number">
                <span class="form-text text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthPlace">Birth Place</label>
                <input asp-for="BirthPlace" type="text" class="form-control" placeholder="Enter birth place">
                <span class="form-text text-muted"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="">Submit</button>
        </form>
    </div>
</div>
@model IEnumerable<MVCAssigment.DataAccess.Person>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div><b>Information list</b><br /></div>
    <div>
        <a type="button" class="btn btn-primary btn-md" asp-controller="Home" asp-action="Create" >Add new person</a>
    </div>
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>FirstName </th>
            <th>LastName </th>
            <th>Gender </th>
            <th>DateOfBirth</th>
            <th>PhoneNumber</th>
            <th>BirthPlace</th>
            <th>IsGraduated</th>
            <th>Actions</th>
        </tr>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.FirstName</td>
                <td>@d.LastName</td>
                <td>@d.Gender</td>
                <td>@d.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>@d.PhoneNumber</td>
                <td>@d.BirthPlace</td>
                <td>@d.IsGraduated</td>
                <td><button type="button" class="btn btn-outline-success mr-5">Edit</button>
                <button type="button" class="btn btn-outline-danger">Delete</button></td>
            </tr>
        }
    </table>

</div>